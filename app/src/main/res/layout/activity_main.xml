<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="316dp"
        android:layout_marginLeft="316dp"
        android:layout_marginTop="0dp"
        android:background="#00ff0000"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:id="@+id/imgbtn1"
        android:src="@drawable/imgbtn" />

    <View
        android:id="@+id/View01"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:background="#c0c0c0" />
    <View
        android:id="@+id/View02"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="#c0c0c0" />

    <Button
        android:id="@+id/kate1"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="59dp"
        android:background="#00ff0000"
        android:text="카테고리" />

    <Button
        android:id="@+id/search_set1"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kate1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="77dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/recommend1"
        android:layout_toLeftOf="@+id/recommend1"
        android:background="#00ff0000"
        android:text="검색어 설정" />

    <Button
        android:id="@+id/recommend1"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kate1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="172dp"
        android:layout_marginRight="172dp"
        android:layout_marginBottom="-1dp"
        android:background="#00ff0000"
        android:text="추천" />

    <Button
        android:id="@+id/basket1"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kate1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="-2dp"
        android:background="#00ff0000"
        android:text="찜목록" />

    <Button
        android:id="@+id/mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kate1"
        android:layout_marginStart="-104dp"
        android:layout_marginLeft="-104dp"
        android:layout_toEndOf="@+id/basket1"
        android:layout_toRightOf="@+id/basket1"
        android:background="#00ff0000"
        android:text="마이페이지" />

    <FrameLayout
        android:id="@+id/fram_main"
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp">

    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="눈에띄네"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

</RelativeLayout>